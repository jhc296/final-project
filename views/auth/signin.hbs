{{#if todo_ok}}
  <div
    class="alert alert-success alert-dismissible fade show margin-mas-grande"
    role="alert"
  >
    <strong>{{todo_ok}}</strong>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
{{/if}}

{{#if todo_error}}
  <div
    class="alert alert-danger alert-dismissible fade show margin-mas-grande"
    role="alert"
  >
    <strong>{{todo_error}}</strong>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
{{/if}}

<div class="popup edit">
  <div class="col fondo bg-primary">
    <form action="/auth/signin" method="POST">
      {{! Correo }}
      <div class="form-control">
        <label for="email" class="form-label">Correo Electronico</label>
        <input
          type="email"
          class="form-control"
          id="email"
          name="email"
          placeholder="Ingrese su correo electronico"
        />
      </div>

      {{! Password }}
      <div class="form-control mt-2">
        <label for="password" class="form-label">Contraseña</label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          placeholder="Ingrese su contraseña"
        />
      </div>

      <button class="btn btn-primary mt-2">
        Signin
      </button>
    </form>
  </div>
</div>